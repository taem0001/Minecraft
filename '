#include "../../include/world/world.hpp"

namespace Minecraft {
	namespace World {
		World::World() {
			Chunk chunk;
			chunk.coord = {0, 0, 0};

			for (int i = 0; i < CHUNK_MAX_X * CHUNK_MAX_Y * CHUNK_MAX_Z; i++) {
				chunk.blocks[i] = DIRT;
			}

			chunk.mesh (new GFX::ChunkMesh);

			chunks.emplace(chunk.coord, std::move(chunk));
		}

		void World::setBlock(const ChunkCoord &coord, int x, int y, int z,
							 BlockID id) {
			chunks.at(coord).setBlock(x, y, z, id);
		}
	} // namespace World
} // namespace Minecraft
